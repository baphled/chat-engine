<section id="main">
  <section id="chat">
    <ul class="messages">
    <% @messages.each do |message| %>
      <li>
        <%=raw message.body %>
      </li>
    <% end %>
    </ul>
  </section>
  <section id="input">
    <%= form_for(@message, :url => chat_engine_messages_path, :method => :post, :remote => true) do |f| %>
      <%= f.hidden_field :from %>
      <%= f.text_field :body, :placeholder => "Enter your message here..." %>
      <%= f.submit "Send", :disable_with => 'Sending...' %>
    <% end %>
  </section>
</section>