<!DOCTYPE html>
<html>
<head>
  <title>Dummy</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults, 'jquery.cssemoticons.min' %>
  
  <script src="http://js.pusherapp.com/1.8/pusher.min.js" type="text/javascript"></script>
  <script type="text/javascript">
    
    var pusher = new Pusher('1760cc2007fea206f2df');
    var channel = pusher.subscribe('messages');
    channel.bind('new-message', function(data) {
      $new_message = $('<li>').append(data['from'] + ": " + data['body']);
      $('ul.messages').prepend($new_message);
    });
  </script>
  <script type="text/javascript" charset="utf-8">
  $(document).ready(function() {
    $("#new_chat_engine_message")
      .bind("ajax:success", function(event, data, status, xhr) {
        $('ul').emoticonize();
        $("input#chat_engine_message_body").attr('value','');
      });
  });
  </script>
  <%= csrf_meta_tag %>
</head>
<body>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <%= yield %>

</body>
</html>
